{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"sourceMap": true,
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests/e2e"]
}
